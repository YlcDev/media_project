    <br/>
    <br/>

    <section class="container">



        <aside class="row">
            <h1 class="text-center">Albums dispo</h1>
        </aside>
        <br/>
        <article class="row">
            <table>
                <thead>
                <tr>
                    {#<th>Id</th>#}
                    <th>Titre</th>
                    <th>Artiste</th>
                    <th>Genre</th>
                    <th>Support</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for album in albums %}
                    <tr>
                        {#<td><a href="{{ path('album_show', { 'id': album.id }) }}">{{ album.id }}</a></td>#}
                        <td>{{ album.titre }}</td>
                        <td>{{ album.artiste }}</td>
                        <td>{{ album.genre }}</td>
                        <td>{{ album.support }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('album_show', { 'id': album.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('album_edit', { 'id': album.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </article>

    </section>




{% endblock %}
