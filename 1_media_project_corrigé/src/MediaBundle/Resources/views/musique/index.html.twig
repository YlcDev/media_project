{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="center-align">Liste des albums</h1>
        <div class="row">
            <form action="{{ path('musique_index') }}">
                <div class="input-field col s10">
                    <select name="genre">
                        <option value="" disabled selected>Choississez un genre</option>
                        <option value="all">Voir tout</option>
                        <option value="Soul">Soul</option>
                        <option value="HipHop">HipHop</option>
                        <option value="Rock">Rock</option>
                    </select>
                </div>
                <div class="col s2">
                    <input class="btn waves-effect waves-light" type="submit" value="Afficher">
                </div>
            </form>
        </div>

        {% if musiques != null %}
            <table class="centered striped">
                <thead>
                <tr class="table_head">
                    <th>Couverture</th>
                    <th>Titre</th>
                    <th>Artiste</th>
                    <th>Genre</th>
                    <th>Support</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for musique in musiques %}
                    <tr>
                        <td class="line_img"><img src="{{ asset('uploads/pictures/') }}{{ musique.image }}" alt="couverture"></td>
                        <td>{{ musique.titre }}</td>
                        <td>{{ musique.artiste }}</td>
                        <td>{{ musique.genre }}</td>
                        <td>{{ musique.support }}</td>
                        <td>
                            <a href="{{ path('musique_show', { 'id': musique.id }) }}"><i class="material-icons">search</i></a>
                            <a href="{{ path('musique_edit', { 'id': musique.id }) }}"><i class="material-icons">mode_edit</i></a>
                            <a href="{{ path('musique_delete', { 'id': musique.id }) }}"><i class="material-icons">delete_forever</i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <h3>Vous n'avez pas d'album référencé pour ce style musical</h3>
        {% endif %}
        <div class="add_button center-align">
            <a class="waves-effect waves-light btn" href="{{ path('musique_new') }}">Ajouter un album</a>
        </div>
    </div>
{% endblock %}
