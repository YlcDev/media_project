{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="center-align">Modifier l'album {{ musique.titre }}</h1>

        <div class="row">
            {{ form_start(edit_form) }}
            <div class="row">
                <div class="input-field col m6 s12">
                    {{ form_label(edit_form.titre) }}
                    {{ form_widget(edit_form.titre) }}
                    {{ form_errors(edit_form.titre) }}
                </div>
                <div class="input-field col m6 s12">
                    {{ form_label(edit_form.artiste) }}
                    {{ form_widget(edit_form.artiste) }}
                    {{ form_errors(edit_form.artiste) }}
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    {{ form_widget(edit_form.genre) }}
                    {{ form_errors(edit_form.genre) }}
                </div>
                <div class="input-field col s6">
                    {{ form_widget(edit_form.support) }}
                    {{ form_errors(edit_form.support) }}
                </div>
            </div>

            <div class="row">
                <div class="col s1">
                    <img src="{{ asset('uploads/pictures/') }}{{ musique.image }}" alt="converture actuelle">
                </div>
                <div class="file-field input-field col s11">
                    <div class="btn">
                        <span>Photo de couverture</span>
                        {{ form_widget(edit_form.file) }}
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>
            <div class="add_button center-align">
                <input class="waves-effect waves-light btn" type="submit" value="Modifier l'album" />
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
